{
  "name": "@webeach/design",
  "version": "1.2.0",
  "author": {
    "name": "Ruslan Martynov",
    "email": "github@webea.ch"
  },
  "description": "Design tokens for WebEach ecosystem",
  "license": "MIT",
  "packageManager": "yarn@4.9.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/webeach/webeach-design"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": "22.15.0"
  },
  "type": "module",
  "main": "./lib/cjs/index.js",
  "module": "./lib/ejs/index.js",
  "types": "./lib/types.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./tokens.css": "./lib/tokens.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "assets",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "generate:assets": "tsx ./scripts/generateAssets.ts",
    "generate:css": "tsx ./scripts/generateCss.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:types": "tsc --noEmit",
    "test": "vitest run",
    "test:update": "vitest run --updateSnapshot",
    "test:watch": "vitest watch",
    "release": "semantic-release",
    "clean": "rm -rf lib",
    "prepare": "is-ci || husky"
  },
  "lint-staged": {
    "**/*.{cjs,js,jsx,mjs,mts,ts,tsx}": [
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.12.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/node": "^24.0.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.0.0",
    "husky": "^9.1.6",
    "is-ci": "^4.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.3.3",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "semantic-release": "^25.0.0",
    "semantic-release-yarn": "^3.0.2",
    "stylelint": "^16.16.0",
    "stylelint-config-standard": "^39.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "vitest": "^4.0.0",
    "zod": "^3.24.2"
  }
}
